{
  "name": "omnipanel-web-app",
  "version": "1.3.0",
  "description": "OmniPanel AI Workspace - Standalone Web Application",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "build:force": "tsc --build --force",
    "build:watch": "tsc --build --watch",
    "dev": "pnpm run build:packages && pnpm run dev:web",
    "type-check": "tsc --build --dry",
    "clean": "rm -rf packages/*/dist .next packages/*/.tsbuildinfo",
    "clean:all": "pnpm run clean && rm -rf node_modules packages/*/node_modules",
    "build:types": "tsc --build packages/types",
    "build:config": "tsc --build packages/config",
    "build:database": "tsc --build packages/database",
    "build:ui": "tsc --build packages/ui",
    "build:llm-adapters": "tsc --build packages/llm-adapters",
    "build:core": "tsc --build packages/core",
    "build:theme-engine": "tsc --build packages/theme-engine",
    "build:plugin-sdk": "tsc --build packages/plugin-sdk",
    "build:packages": "pnpm run build:types && pnpm run build:config && pnpm run build:database && pnpm run build:ui && pnpm run build:llm-adapters && pnpm run build:core && pnpm run build:theme-engine && pnpm run build:plugin-sdk",
    "build:web": "pnpm run build:packages && cd apps/web && next build",
    "dev:web": "cd apps/web && next dev --port 3003",
    "start": "cd apps/web && next start --port 3003",
    "lint": "cd apps/web && next lint",
    "lint:fix": "cd apps/web && next lint --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\" \"packages/*/src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\" \"packages/*/src/**/*.{ts,tsx,json,md}\"",
    "test": "jest",
    "test:unit": "jest --testPathPattern=src --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage": "jest --coverage --coverageReporters=html --coverageReporters=text",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:flows": "node scripts/test-runner.js flows",
    "test:processes": "node scripts/test-runner.js processes",
    "test:user-guides": "node scripts/test-runner.js documentation",
    "test:comprehensive": "node scripts/test-runner.js all",
    "test:all": "pnpm run test:unit && pnpm run test:integration && pnpm run test:e2e",
    "validate:docs": "pnpm run test:user-guides",
    "validate:features": "pnpm run test:flows && pnpm run test:processes",
    "test:all:ci": "pnpm run lint && pnpm run type-check && pnpm run test:ci && pnpm run test:e2e",
    "reinstall": "pnpm run clean:all && pnpm install",
    "reset": "pnpm run clean && pnpm run build",
    "setup": "pnpm install && pnpm run build:packages"
  },
  "dependencies": {
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/uuid": "^10.0.0",
    "framer-motion": "^12.18.1",
    "lucide-react": "^0.510.0",
    "nanoid": "^5.1.5",
    "next": "^15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.8.2",
    "uuid": "^11.0.3",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.19.0",
    "eslint-config-next": "^15.1.6",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
